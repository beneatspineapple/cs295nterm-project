<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@model List<Ride>
@{
    ViewData["Title"] = "RideInput";
}

<div class="container my-3">
    <div class="row">
        <div class="col-12 col-xl-9">
            <h2 class="h4 category mb-0 p-4 rounded-top text-light">Ride Leaderboard</h2>
            <table class="table table-striped table-bordered table-responsive">
                <thead class="thead-light">
                    <tr>
                        <th class="col-md-2">Distance in Miles</th>
                        <th class="col-md-2">Duration(Minutes)</th>
                        <th class="col-md-2">Start Point</th>
                        <th class="col-md-2">End Point</th>
                        <th class="col-md-2">Date of Ride</th>
                        <th class="col-md-2">Date Submitted to Leaderboard</th>
                    </tr>
            </thead>
        @if (@Model != null)
        {
            foreach (Ride ride in Model)
            {
                <tr>
                    <td class="col-md-2">
                        <span>
                            <a asp-controller="RideTracker"
                       asp-action="Rides"
                       asp-route-RideId="@ride.RideId">@ride.Distance</a>
                        </span>
                    </td>
                    <td class="col-md-2">
                        <span>@ride.Duration</span>
                    </td>
                    <td class="col-md-2">
                        <span>@ride.StartPoint</span>
                    </td>
                    <td class="col-md-2">
                        <span>@ride.EndPoint</span>
                    </td>
                    <td class="col-md-2">
                        <span>@ride.RideDate</span>
                    </td>
                    <td class="col-md-2">
                        <span>@ride.DateSubmitted</span>
                    </td>
                </tr>
            }
        }
    </table>
<a href="RideTracker/RideInput" class="btn btn-primary aqws">Add new ride</a>
<br />
<a href="/Home" class="btn btn-primary aqws">Home</a>
</div>
</div>
</div>
